{% extends 'base.html.twig' %}

{% block main %}

    <div>
        <div class="top-line">
            <h1>Recent Recipes</h1>
        </div>
        <div class="row">
            {# Programmatic construction of recipes with a nested for loop for ingredients #}
            {% for recipe in recipes %}
                <div class="col-sm" align="center">
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">{{ recipe.title }}</h5>
                            <p class="card-text">
                                {% for ingredient in recipe.ingredients %}
                                    <div>{{ ingredient }}</div>
                                {% endfor %}
                            </p>
                            <span>
                                <a href="#" class="btn btn-success">View Details</a>
                                <a href="#" class="btn btn-danger">Edit Recipe</a>
                            </span>
                        </div>
                    </div>
                </div>
            {% else %}
                <h2>No Recipes Found!</h2>
            {% endfor %}
        </div>
    </div>

{% endblock main %}
