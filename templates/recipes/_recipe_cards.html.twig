{# Programmatic construction of recipes with a nested for loop for ingredients #}
{% for recipe in recipes %}
    <div class="col-sm" style="padding: 1rem;" align="center">
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">{{ recipe.title }}</h5>
                <p class="card-text">
                    {% for ingredient in recipe.ingredients %}
                        <div>{{ ingredient }}</div>
                    {% endfor %}
                </p>
                <span>
                    <a href="/recipe/{{ recipe.id }}" class="btn btn-success">View</a>
                    <a href="/recipe/edit/{{ recipe.id }}" class="btn btn-primary">Edit</a>
                </span>
            </div>
        </div>
    </div>
{% else %}
    <h2>No Recipes Found!</h2>
{% endfor %}